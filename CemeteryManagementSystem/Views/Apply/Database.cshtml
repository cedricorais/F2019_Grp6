@model IEnumerable<CemeteryManagementSystem.Models.ApplyModel>

@{
    ViewBag.Title = "Database";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Applicant's @ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantMiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicantBirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.selectedApplicantGender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.selectedPaymentMethod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.Id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.applicantLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantMiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicantBirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selectedApplicantGender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selectedPaymentMethod)
        </td>
        <td>
            @Html.ActionLink("Edit*", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details*", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

